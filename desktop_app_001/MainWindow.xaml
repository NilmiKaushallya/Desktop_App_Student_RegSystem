<Border CornerRadius="60">
        <Border.Background>
            <ImageBrush ImageSource="/Images/images.jpeg"/>
        </Border.Background>

        <Border 
        
        BorderThickness="8"
        Opacity="0.9">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6b0e40" Offset="0"/>
                <GradientStop Color="#2e041a" Offset="0.75"/>
                <GradientStop Color="#6b0e40" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="DarkCyan" Offset="0"/>
                    <GradientStop Color="#2e4e5c" Offset="0.25"/>
                    <GradientStop Color="DarkCyan" Offset="0.55"/>
                    <GradientStop Color="#2e4e5c" Offset="0.95"/>
            </LinearGradientBrush>
        </Border.Background>


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Students Database"
                               Foreground="#39313b"
                               FontSize="20"
                               FontWeight="Bold"
                               FontFamily="montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="35,10,10,0"/>

                <Button x:Name="btnminimize"                           
                            BorderThickness="0"
                            Content="-"
                            Foreground="DarkGray"
                            FontSize="16"
                            FontFamily="montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnminimize_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Red"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#6c5173"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>


                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>


                </Button>

                <Button x:Name="btnClose"                            
                            BorderThickness="0"
                            Content="X"
                            Foreground="DarkGray"
                            FontSize="13"
                            FontFamily="montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnClose_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Red"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#6c5173"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>


                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

            </Grid>


                <StackPanel Width="800" Height="650"
                            Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,0,0,0">


                    <ListView Style="{DynamicResource ListViewStyle1}" ItemsSource="{Binding People}" SelectedItem="{Binding SelectedPerson}" Background="{DynamicResource Button.Static.Background}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="5" Margin="5"
									CornerRadius="5"
									BorderBrush="Purple"
									BorderThickness="2">
                                    <StackPanel 
                                  Background="#FF70E945"
                                    Orientation="Horizontal">
                                        <Image Source="{Binding ImageThumbnail}"
										   Width="30" Height="30"/>

                                        <TextBlock Margin="5" Padding="5"
											   FontSize="20"
											   Text="{Binding StudentNo}"/>
                                        <TextBlock Margin="5" Padding="5"
											   FontSize="20"
											   Text="{Binding FirstName}"/>
                                        <TextBlock Margin="5" Padding="5"
											   FontSize="20"
											   Text="{Binding LastName}"/>
                                        <TextBlock Margin="5" Padding="5"
											   FontSize="20"
											   Text="{Binding DateOfBirth}"/>
                                        <TextBlock Margin="5" Padding="5"                                              
											   FontSize="20"
											   Text="{Binding GpaValue}"/>



                                    </StackPanel>



                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>


                    </ListView>

                </StackPanel>



               
                            

                <StackPanel Width="800" Height="100"                            
                            Grid.Row="2"                            
                            Margin="0,0,0,0"
				                VerticalAlignment="Bottom"
				                Background="DodgerBlue" Orientation="Horizontal">




                    <Button Margin ="20" 
					Style="{DynamicResource RoundedButtonStyle}"
                        Content=" Add New Student" Height="50" Width="150" 
                        RenderTransformOrigin="0.464,2.585"
                        Background="HotPink" Foreground="Yellow"
                        FontFamily="Arial"
                        FontSize="15"
                        Command="{Binding AddAPersonCommand}"/>



                    <Button Margin ="20" 
					Style="{DynamicResource RoundedButtonStyle}"
                        Content=" Edit Student Details" Height="50" Width="150" 
                        RenderTransformOrigin="0.464,2.585"
                        Background="HotPink" Foreground="Yellow"
                        FontFamily="Arial"
                        FontSize="15"
                        Command="{Binding EditAPersonCommand}"/>


                    <Button Margin ="20"
						Style="{DynamicResource RoundedButtonStyle}"
                        Content=" Delete Student" Height="50" Width="170" 
                        RenderTransformOrigin="0.464,2.585"
                        Background="HotPink" Foreground="Yellow"
                        FontFamily="Arial"
                        FontSize="15"
                        Command="{Binding DeleteStudentCommand}"/>






                </StackPanel>

           </Grid>




    </Border>
</Border>
</Window>

